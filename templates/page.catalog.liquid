{% render "ysa-header" %}
{% render "ysa-theme" %}

<section class="catalog">
  {% assign collection = collections['all'] %}
  {% paginate collection.products by 12 %}
    <ul class="catalog__grid" role="list">
      {% for product in paginate.items %}
        <li class="catalog__card">
          <div class="catalog__image-wrap">
            <a href="{{ product.url }}">
              {{ product.featured_image | img_url: '400x400', crop: 'center' | img_tag: product.title, class: 'catalog__image' }}
            </a>
          </div>
          <h3 class="catalog__title"><a href="{{ product.url }}">{{ product.title }}</a></h3>
          <p class="catalog__price">{{ product.price | money }}</p>
          <a class="btn catalog__view" href="{{ product.url }}">View Product</a>
        </li>
      {% endfor %}
    </ul>
    {% if paginate.pages > 1 %}
      <nav class="pagination" role="navigation">
        {% if paginate.previous %}
          <a href="{{ paginate.previous.url }}">&laquo; Previous</a>
        {% endif %}
        <span>{{ paginate.current_page }} / {{ paginate.pages }}</span>
        {% if paginate.next %}
          <a href="{{ paginate.next.url }}">Next &raquo;</a>
        {% endif %}
      </nav>
    {% endif %}
  {% endpaginate %}
</section>

