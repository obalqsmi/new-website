{%- liquid
  assign color_scheme = section.settings.color_scheme
  assign gift_wrap_product = settings.dbtfy_gift_wrap_product
-%}

{%- capture trust_badges -%}
  {%- if settings.trust_badges_show_on_footer -%}
      {%- render 'dbtfy-trust-badge', badge_alignment: settings.trust_badges_alignment_footer, logo_size: settings.trust_badges_footer_logo_size, logo_size_mobile: settings.trust_badges_footer_logo_size_mobile, position: 'footer', section_color_scheme: color_scheme, enable_heading: settings.trust_badges_enable_heading_footer, enable_subheading: settings.trust_badges_enable_subheading_footer, enable_info_text: settings.trust_badges_enable_text_footer -%}
  {%- endif -%}
{%- endcapture -%}

<div
  class="footer color-{{ color_scheme }} color-bg color-text"
  role="contentinfo"
  data-section-type="footer"
  data-section-id="{{ section.id }}"
>
  {%- if settings.trust_badges_badges_footer_location == 'above' -%}
    {{- trust_badges -}}
  {%- endif -%}

  {%- if section.blocks.size > 0 %}
    <div class="section">
      <div class="container">
        <div class="row">
          {%- for block in section.blocks -%}
            {%- liquid
              assign column_width = block.settings.column_width
              assign title = block.settings.title
              assign subheading = block.settings.subheading
              assign footer_column_class = 'footer__block--col-md-' | append: column_width
            -%}

            <div
              class="footer__block footer__block--{{ block.type }} {{ footer_column_class }}"
              {{ block.shopify_attributes }}
            >
              {%- if title != blank -%}
                <h4 class="footer__block-title h4 mb-2">{{ title | escape }}</h4>
              {%- endif -%}

              {%- if subheading != blank -%}
                <p class="text-base mb-2">{{ subheading | escape }}</p>
              {%- endif -%}

              {%- case block.type -%}
                {%- when 'localization' -%}
                  {%- liquid
                    assign logo = block.settings.logo
                    assign logo_url = block.settings.logo_url
                    assign logo_width = block.settings.logo_width
                  -%}

                  {%- if logo != blank -%}
                    {%- if logo_url != blank -%}
                      <a href="{{ logo_url }}" class="d-block">
                    {%- endif -%}

                    {%- capture sizes -%}{{ logo_width }}px{%- endcapture -%}
                    {%- capture widths -%}{{ logo_width }}, {{ logo_width | times: 2 | at_most: logo.width }}{%- endcapture -%}
                    {%- capture style -%}width: 100%; max-width: {{ logo_width }}px{%- endcapture -%}

                    {{-
                      logo
                      | image_url: width: logo.width
                      | image_tag: loading: 'lazy', style: style, sizes: sizes, widths: widths, class: 'mb-3'
                    -}}

                    {%- if logo_url != blank -%}
                      </a>
                    {%- endif -%}
                  {%- endif -%}

                  {%- liquid
                    if settings.show_language_selector or settings.show_country_selector
                      render 'localization-form', position: 'footer-block', display_type: 'block'
                    endif
                  -%}

                {%- when 'html' -%}
                  {%- liquid
                    assign html_area = block.settings.html_area
                  -%}

                  {%- if html_area != blank -%}
                    <div class="rte">
                      {{ html_area }}
                    </div>
                  {%- endif -%}

                {%- when 'link_list' -%}
                  {%- liquid
                    assign menu = block.settings.menu
                  -%}

                  <ul role="list" class="mt-3 footer__linklist">
                    {%- for link in linklists[menu].links -%}
                      <li role="listitem">
                        <a href="{{ link.url }}" class="text-break-all">
                          {{ link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>

                {%- when 'newsletter' -%}
                  {%- liquid
                    assign customer_tag = block.settings.customer_tag
                    assign show_newsletter_first_name = block.settings.show_newsletter_first_name
                    assign enable_newsletter_opt_in_checkbox = block.settings.enable_newsletter_opt_in_checkbox
                  -%}

                  {%- render 'newsletter-form',
                    source: customer_tag,
                    show_newsletter_first_name: show_newsletter_first_name,
                    enable_newsletter_opt_in_checkbox: enable_newsletter_opt_in_checkbox
                  -%}

                {%- when 'text' -%}
                  {%- liquid
                    assign text = block.settings.text
                    assign logo = block.settings.logo
                    assign logo_url = block.settings.logo_url
                    assign logo_width = block.settings.logo_width
                    assign show_email = block.settings.show_email
                    assign show_phone = block.settings.show_phone
                    assign show_fax = block.settings.show_fax
                    assign fax = block.settings.fax
                    assign show_location = block.settings.show_location
                    assign show_social_media = block.settings.show_social_media
                  -%}

                  {%- if logo != blank -%}
                    {%- if logo_url != blank -%}
                      <a href="{{ logo_url }}" class="d-block">
                    {%- endif -%}

                    {%- capture sizes -%}{{ logo_width }}px{%- endcapture -%}
                    {%- capture widths -%}{{ logo_width }}, {{ logo_width | times: 2 | at_most: logo.width }}{%- endcapture -%}
                    {%- capture style -%}width: 100%; max-width: {{ logo_width }}px{%- endcapture -%}

                    {{-
                      logo
                      | image_url: width: logo.width
                      | image_tag: loading: 'lazy', style: style, sizes: sizes, widths: widths, class: 'mb-3'
                    -}}

                    {%- if logo_url != blank -%}
                      </a>
                    {%- endif -%}
                  {%- endif -%}

                  {%- if text != blank -%}
                    <div class="rte">
                      {{- text -}}
                    </div>
                  {%- endif -%}

                  {%- if show_email or show_phone -%}
                    <ul class="mt-3 footer__linklist">
                      {%- if show_email -%}
                        <li>
                          <a href="mailto:{{ shop.email | escape }}">
                            <span class="{{ settings.icon }} icon-width" translate="no" aria-hidden="true">email</span>
                            {{ shop.email }}
                          </a>
                        </li>
                      {%- endif -%}

                      {%- if show_phone -%}
                        <li>
                          <a href="tel:{{ shop.phone | remove: '-' | replace: ' ', '' }}">
                            <span class="{{ settings.icon }} icon-width" translate="no" aria-hidden="true">phone</span>
                            {{ shop.phone }}
                          </a>
                        </li>
                      {%- endif -%}

                      {%- if show_fax and fax != blank -%}
                        <li>
                          <a href="fax:{{ fax | remove: '-' | replace: ' ', '' }}">
                            <span class="{{ settings.icon }} icon-width" translate="no" aria-hidden="true">print</span>
                            {{ fax }}
                          </a>
                        </li>
                      {%- endif -%}

                      {%- if show_location -%}
                        <li>
                          <a href="https://maps.google.com?daddr={{ shop.address.summary | escape }}">
                            <span class="{{ settings.icon }} icon-width" translate="no" aria-hidden="true"
                              >location_on</span
                            >
                            {{ shop.address.summary }}
                          </a>
                        </li>
                      {%- endif -%}
                    </ul>
                  {%- endif -%}

                  {%- if show_social_media -%}
                    <div class="mt-3">
                      {%- if social_media_title != blank -%}
                        <h5 class="h4 mb-2">{{ social_media_title }}</h5>
                      {%- endif -%}

                      {%- render 'social-media', classes: 'mt-3' -%}
                    </div>
                  {%- endif -%}

                {%- when 'product' -%}
                  {%- liquid
                    assign featured_product = block.settings.product
                    assign empty_state = false

                    if featured_product == blank
                      assign empty_state = true
                    endif
                  -%}

                  <div>
                    {%- render 'product-grid-item', product: featured_product, empty_state: empty_state, current: 1 -%}
                  </div>

                {%- when 'featured_collection' -%}
                  {%- liquid
                    assign featured_collection = collections[block.settings.collection]
                    assign limit = block.settings.collection_limit
                    assign show_arrows = block.settings.show_arrows
                    assign show_dots = block.settings.show_dots
                    assign enable_autoplay = block.settings.enable_autoplay
                    assign autoplay_speed = block.settings.autoplay_speed | times: 1000

                    assign empty_state = false

                    if featured_collection == blank or featured_collection.products_count == 0
                      assign empty_state = true
                    endif
                  -%}

                  {%- capture block_settings -%}
                    {
                      "showArrows": {{ show_arrows | json }},
                      "showDots": {{ show_dots | json }},
                      "enableAutoplay": {{ enable_autoplay | json }},
                      "autoplaySpeed": {{ autoplay_speed | json }}
                    }
                  {%- endcapture -%}

                  <div>
                    <div class="row row--sm slick js-slider" data-block-settings="{{ block_settings }}">
                      {%- liquid
                        if empty_state
                          for i in (1..limit)
                            capture current
                              cycle 1, 2, 3, 4, 5, 6
                            endcapture

                            render 'product-grid-item', empty_state: empty_state, current: current
                          endfor
                        else
                          for product in featured_collection.products limit: limit
                            capture product_item
                              capture current
                                cycle 1, 2, 3, 4, 5, 6
                              endcapture

                              render 'product-grid-item', product: product, current: current
                            endcapture

                            if product.id != gift_wrap_product.id
                              echo product_item
                            endif
                          endfor
                        endif
                      -%}
                    </div>
                  </div>

                {%- when 'collection_list' -%}
                  {%- liquid
                    assign collection_1 = collections[block.settings.collection_1]
                    assign collection_2 = collections[block.settings.collection_2]
                    assign collection_3 = collections[block.settings.collection_3]
                    assign collection_4 = collections[block.settings.collection_4]
                  -%}

                  {%- if collection_1 != blank
                    or collection_2 != blank
                    or collection_3 != blank
                    or collection_4 != blank
                  -%}
                    <div class="row gy-3">
                      {%- liquid
                        if collection_1 != blank
                          render 'collection-grid-item', collection: collection_1, current: 1, images_loading_type: 'lazy', collection_image_alignment: 'center-center', grid_item_width: 'col-12'
                        endif

                        if collection_2 != blank
                          render 'collection-grid-item', collection: collection_2, current: 2, images_loading_type: 'lazy', collection_image_alignment: 'center-center', grid_item_width: 'col-12'
                        endif

                        if collection_3 != blank
                          render 'collection-grid-item', collection: collection_3, current: 3, images_loading_type: 'lazy', collection_image_alignment: 'center-center', grid_item_width: 'col-12'
                        endif

                        if collection_4 != blank
                          render 'collection-grid-item', collection: collection_4, current: 4, images_loading_type: 'lazy', collection_image_alignment: 'center-center', grid_item_width: 'col-12'
                        endif
                      -%}
                    </div>
                  {%- endif -%}

                {%- when 'featured_blog' -%}
                  {%- liquid
                    assign blog = blogs[block.settings.blog]
                    assign limit = 1

                    assign empty_state = false

                    if blog.articles_count == 0 or blog == blank
                      assign empty_state = true
                    endif
                  -%}

                  <div class="blog">
                    {%- liquid
                      if empty_state
                        for i in (1..limit)
                          capture current
                            cycle 1, 2
                          endcapture

                          render 'article-grid-item', empty_state: empty_state, current: current
                        endfor
                      else
                        for article in blog.articles limit: limit
                          render 'article-grid-item', article: article, blog: blog, empty_state: empty_state
                        endfor
                      endif
                    -%}
                  </div>

                {%- when 'featured_article' -%}
                  {%- liquid
                    assign article = articles[block.settings.article]
                    assign article_url = article.url | split: '/'
                    assign blog_handle = article_url[2]
                    assign blog = blogs[blog_handle]
                    assign limit = 1

                    assign empty_state = false

                    if article == blank
                      assign empty_state = true
                    endif
                  -%}

                  <div class="article">
                    {%- liquid
                      if empty_state
                        render 'article-grid-item', empty_state: empty_state, current: 1
                      else
                        render 'article-grid-item', article: article, blog: blog, empty_state: empty_state
                      endif
                    -%}
                  </div>

                {%- when 'search' -%}
                  {%- liquid
                    assign show_search = block.settings.show_search
                    assign search_display_type = block.settings.search_display_type
                    assign show_localization = block.settings.show_localization

                    assign show_payment_icons = block.settings.show_payment_icons

                    assign custom_credential = block.settings.custom_credential
                    assign show_shopify_footer = block.settings.show_shopify_footer
                    assign show_business_registration = block.settings.show_business_registration
                    assign business_registration_heading = block.settings.business_registration_heading
                    assign business_registration = block.settings.business_registration

                    assign show_localization_block = false

                    if show_search and search_display_type == 'minimal'
                      assign show_localization_block = true
                    endif

                    if settings.show_language_selector or settings.show_country_selector
                      if show_localization
                        if show_search and search_display_type == 'standard'
                        else
                          assign show_localization_block = true
                        endif
                      endif
                    endif
                  -%}

                  {%- if show_localization_block -%}
                    <div class="d-flex mb-3">
                      {%- liquid
                        if settings.show_language_selector or settings.show_country_selector
                          if show_localization
                            if show_search and search_display_type == 'standard'
                            else
                              render 'localization-form', position: 'footer', toggle_class: 'header-menu__link header-menu__link--icon'
                            endif
                          endif
                        endif
                      -%}

                      {%- if show_search and search_display_type == 'minimal' -%}
                        <a
                          href="/search"
                          class="ms-2 js-drawer-open-button-top"
                          aria-controls="SearchDrawer"
                          aria-label="{{ 'general.search.title' | t }}"
                          title="{{ 'general.search.title' | t }}"
                        >
                          <span class="{{ settings.icon }} icon icon--md" translate="no" aria-hidden="true"
                            >search</span
                          >
                        </a>
                      {%- endif -%}
                    </div>
                  {%- endif -%}

                  {%- if show_search and search_display_type == 'standard' -%}
                    <predictive-search class="d-block w-100">
                      <div class="">
                        <div class="row row--sm row-cols-auto align-items-center flex-nowrap">
                          <form
                            action="{{ routes.search_url }}"
                            method="get"
                            class="search-bar flex-fill"
                            role="search"
                            id="MainSearch"
                          >
                            <div class="flex-fill">
                              {%- render 'search-bar',
                                search_location: 'drawer',
                                form_tag: false,
                                location: 'footer'
                              -%}
                            </div>
                          </form>

                          {%- if settings.show_language_selector or settings.show_country_selector -%}
                            {%- if settings.localization_position == 'footer'
                              or settings.localization_position == 'header_and_footer'
                            -%}
                              <div class="footerLocalization">
                                {%- render 'localization-form',
                                  position: 'footer',
                                  toggle_class: 'header-menu__link header-menu__link--icon'
                                -%}
                              </div>
                            {%- endif -%}
                          {%- endif -%}

                          {% comment %}
                            {%- liquid
                              if settings.show_language_selector or settings.show_country_selector
                                if show_localization
                                  render 'localization-form', position: 'footer', toggle_class: 'header-menu__link header-menu__link--icon'
                                endif
                              endif
                            -%}
                          {% endcomment %}
                        </div>
                      </div>

                      {%- render 'dbtfy-smart-search' -%}
                    </predictive-search>
                  {%- endif -%}

                  {%- if show_payment_icons -%}
                    <div class="col-12 my-4">
                      {%- render 'payment-icons', classes: 'justify-content-center justify-content-md-start' -%}
                    </div>
                  {%- endif -%}

                  {%- if show_business_registration
                    and business_registration_heading != blank
                    and business_registration != blank
                  -%}
                    {%- if business_registration_heading != blank -%}
                      <h4 class="footer__block-title h4 mb-2">{{ business_registration_heading | escape }}</h4>
                    {%- endif -%}

                    <div class="rte text-base">{{ business_registration }}</div>
                  {%- endif -%}

                  <div class="text-sm mt-3">
                    Copyright &copy; {{ 'now' | date: '%Y' }}
                    {{ shop.name | link_to: routes.root_url }}

                    {%- if custom_credential != blank -%}
                      | {{ custom_credential | remove: '<p>' | remove: '</p>' }}
                    {%- endif -%}

                    {%- if show_shopify_footer -%}
                      <span class="text-sm"> | {{ powered_by_link }} </span>
                    {%- endif -%}

                    <span class="footer__branding text-sm">
                      |
                      <a
                        href="https://debutify.com?utm_source={{ shop.domain }}&utm_medium=referral&utm_campaign=product-theme-footer-link"
                        target="_blank"
                        rel="nofollow"
                        title="The World's #1 Free Shopify Theme"
                        >Powered by Debutify</a
                      >
                    </span>
                  </div>
              {%- endcase -%}
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  {%- endif -%}

  {%- liquid
    assign show_social_media = section.settings.show_social_media
    assign social_media_position_desktop = section.settings.social_media_position_desktop
    assign social_media_position_mobile = section.settings.social_media_position_mobile
    assign social_media_title = section.settings.social_media_title
    assign show_policy_links = section.settings.show_policy_links
    assign container_classes = 'justify-content-center justify-content-md-between'
    assign policies_classes = 'justify-content-center'
  -%}

  {%- if show_social_media == false or show_policy_links == false -%}
    {%- liquid
      case social_media_position_desktop
        when 'right'
          assign container_classes = 'justify-content-center justify-content-md-end'

        when 'left'
          assign container_classes = 'justify-content-center justify-content-md-start'
      endcase

      case social_media_position_mobile
        when 'right'
          assign container_classes = 'right'

        when 'left'
          assign container_classes = 'left'

        when 'center'
          assign container_classes = 'center'
      endcase
    -%}
  {%- else -%}
    {%- liquid
      case social_media_position_desktop
        when 'right'
          assign social_icons_classes = 'mx-auto mx-sm-0 order-1 order-md-1'
          assign social_icons_list_classes = 'justify-content-center justify-content-md-end'
          assign policies_classes = 'justify-content-center order-0 order-md-0'

        when 'left'
          assign social_icons_classes = 'mx-auto mx-sm-0 order-1 order-md-0'
          assign social_icons_list_classes = 'justify-content-center justify-content-md-start'
          assign policies_classes = 'justify-content-center order-0 order-md-1'
      endcase
    -%}
  {%- endif -%}

  {%- if show_social_media or show_policy_links -%}
    <div class="footer__bottom header-menu">
      <div class="container">
        <div class="inline-list {{ container_classes }}">
          {%- if show_social_media -%}
            <div class="footer_social-media inline-list {{ social_icons_classes }} {{ social_media_position_mobile }}">
              {%- if social_media_title != blank -%}
                <h3 class="h4">{{ social_media_title }}</h3>
              {%- endif -%}

              {%- render 'social-media', classes: social_icons_list_classes -%}
            </div>
          {%- endif -%}

          {%- if show_policy_links and shop.policies.size > 0 -%}
            <ul class="footer__policies inline-list order-0 text-center mb-2 mb-md-0 {{ policies_classes }}">
              {%- for policy in shop.policies -%}
                {%- if policy != blank -%}
                  <li class="inline-block">
                    <a href="{{ policy.url }}">
                      {{- policy.title | escape -}}
                    </a>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
    </div>
  {%- endif -%}

  {%- if settings.trust_badges_badges_footer_location == 'below' -%}
    {{- trust_badges -}}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "header",
      "content": "t:general.addons.help_center.header.content"
    },
    {
      "type": "paragraph",
      "content": "t:general.addons.help_center.section_footer.content"
    },
    {
      "type": "header",
      "content": "t:general.addons.settings.header.content"
    },
    {
      "type": "checkbox",
      "id": "show_social_media",
      "label": "t:sections.footer.settings.show_social_media.label",
      "default": true
    },
    {
      "type": "select",
      "id": "social_media_position_desktop",
      "label": "t:sections.footer.settings.social_media_position_desktop.label",
      "default": "right",
      "options": [
        {
          "value": "left",
          "label": "t:sections.footer.settings.social_media_position_desktop.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.footer.settings.social_media_position_desktop.options__1.label"
        }
      ],
      "info": "If 'Show social media icons' checkbox is unchecked, this setting will control the policy links position."
    },

    {
      "type": "select",
      "id": "social_media_position_mobile",
      "label": "t:sections.footer.settings.social_media_position_mobile.label",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "t:sections.footer.settings.social_media_position_mobile.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.footer.settings.social_media_position_mobile.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.footer.settings.social_media_position_mobile.options__3.label"
        }
      ]
    },

    {
      "type": "text",
      "id": "social_media_title",
      "label": "t:general.settings.heading.label",
      "default": "Follow-us on social media!"
    },
    {
      "type": "header",
      "content": "Policy links"
    },
    {
      "type": "checkbox",
      "id": "show_policy_links",
      "label": "Show policy links",
      "default": true
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "newsletter",
      "name": "t:sections.footer.blocks.newsletter.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "t:general.sections.blocks.block_name.label",
          "info": "t:general.sections.blocks.block_name.info"
        },
        {
          "type": "range",
          "id": "column_width",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "t:sections.footer.blocks.newsletter.settings.column_width.label",
          "default": 2
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:general.settings.heading.label",
          "default": "Subscribe to our newsletter"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "t:general.settings.subheading.label",
          "default": "Join our email list for exclusive offers and the latest news."
        },
        {
          "type": "checkbox",
          "id": "show_newsletter_first_name",
          "label": "t:settings_schema.advanced_settings.settings.show_newsletter_name.label",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "enable_newsletter_opt_in_checkbox",
          "label": "t:settings_schema.advanced_settings.settings.enable_newsletter_opt_in_checkbox.label",
          "default": true
        },
        {
          "type": "text",
          "id": "customer_tag",
          "label": "t:sections.footer.blocks.newsletter.settings.customer_tag.label",
          "default": "newsletter",
          "info": "t:sections.footer.blocks.newsletter.settings.customer_tag.info"
        },
        {
          "type": "paragraph",
          "content": "t:sections.footer.blocks.newsletter.settings.paragraph.content"
        }
      ]
    },
    {
      "type": "localization",
      "name": "Localization",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "t:general.sections.blocks.block_name.label",
          "info": "t:general.sections.blocks.block_name.info"
        },
        {
          "type": "range",
          "id": "column_width",
          "min": 1,
