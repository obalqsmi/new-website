{%- liquid
  assign section_height = section.settings.hero_section_height_desktop
  assign section_height_mobile = section.settings.hero_section_height_mobile
  assign color_scheme = section.settings.color_scheme
  assign image = collection.image
  assign title = collection.title
  assign description = collection.description
  assign show_collection_image = settings.show_collection_image
  assign show_collection_description = settings.show_collection_description
  assign collection_description_position = settings.collection_description_position
-%}

<div class="slideshow slideshow--{{ section_height }} slideshow--{{ section_height_mobile }}-mobile section section--no-top-spacing section--no-bottom-spacing color-{{ color_scheme }}">
  <div class="slideshow__slider slideshow__slider--loaded">
    <div class="slideshow__slide overlay media-wrapper media-wrapper--cover align-items-center">
      {%- if show_collection_image and image != blank -%}
        {%- capture sizes -%}100vw{% endcapture %}

        {{- image | image_url: width: image.width | image_tag: loading: 'eager', sizes: sizes, widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600', class: 'media' -}}
      {%- endif -%}

      <div class="slideshow__inner media-wrapper__content media-wrapper__content--relative text-center">
        <div class="container d-flex justify-content-center">
          <div class="slideshow__content row gy-3">
            {%- if settings.collection_title_position == 'in-banner' and title != blank -%}
              <div>
                <h1 class="page-title h1">{{ title | escape }}</h1>
              </div>
            {%- endif -%}

            {%- if show_collection_description and collection_description_position == 'in-banner' and description != blank -%}
              <div class="rte sm:text-lg">{{ description }}</div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main_collection_banner.name",
  "class": "hero-section",
  "settings": [
    {
      "type": "select",
      "id": "hero_section_height_desktop",
      "label": "t:settings_schema.advanced_settings.settings.hero_section_height_desktop.label",
      "default": "xs",
      "options": [
        {
          "value": "xs",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_desktop.options__1.label"
        },
        {
          "value": "sm",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_desktop.options__2.label"
        },
        {
          "value": "md",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_desktop.options__3.label"
        },
        {
          "value": "lg",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_desktop.options__4.label"
        },
        {
          "value": "xl",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_desktop.options__5.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "hero_section_height_mobile",
      "label": "t:settings_schema.advanced_settings.settings.hero_section_height_mobile.label",
      "default": "xs",
      "options": [
        {
          "value": "xs",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_mobile.options__1.label"
        },
        {
          "value": "sm",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_mobile.options__2.label"
        },
        {
          "value": "md",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_mobile.options__3.label"
        },
        {
          "value": "lg",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_mobile.options__4.label"
        },
        {
          "value": "xl",
          "label": "t:settings_schema.advanced_settings.settings.hero_section_height_mobile.options__5.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    }
  ]
}
{% endschema %}